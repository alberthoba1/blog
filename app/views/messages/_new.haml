%a.micon{:href => "email@gmail.com"}
%h2.msgh2 Contact us
= render 'shared/errors', obj: @message
.row
  .col-xs-12
    = form_for(@message, url: contacts_path, :html => {class: "form-horizontal", role: "form"}) do |f|
      .form-group
        .control-label.col-sm-2
          = f.label :Tytuł
        .col-sm-8
          = f.text_field :title,
            class: "form-control",
            placeholder: "",
            autofocus: true
      .form-group
        .control-label.col-sm-2
          = f.label :email
        .col-sm-8
          = f.email_field :email,
            class: "form-control",
            placeholder: "Enter email",
            autofocus: true
      .form-group
        .control-label.col-sm-2
          = f.label :Treść
        .col-sm-8
          = f.text_area :description, rows: 9, class: "form-control", placeholder: "Body of article"
      .form-group
        .col-sm-offset-5.col-sm-1
          = f.submit 'Wyślij', rows: 9, class: 'btn btn-primary btn-lg'
    .col-xs-4.col-xs-offset-4
      = link_to 'Lista', articles_path
