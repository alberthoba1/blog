.row
  .col-xs-12
    = form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f|
      .form-group
        .control-label.col-sm-2
          = f.label :Nazwa_użytkownika
        .col-sm-8
          = f.text_field :username,                    |
            class: "form-control",                     |
            placeholder: "Wprowadź nazwę użytkownika", |
            autofocus: true                            |
      .form-group
        .control-label.col-sm-2
          = f.label :Hasło
        .col-sm-8
          = f.password_field :password,
            class: "form-control",
            placeholder: "Wprowadź hasło" 
      .form-group
        .control-label.col-sm-2
          = f.label :email
        .col-sm-8
          = f.email_field :email,
            class: "form-control",
            placeholder: "Wprowadź email"
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit(@user.new_record? ? "Zarejestruj się" : "Zaaktualizuj konto", class: 'btn btn-primary btn-lg')
    .col-xs-4.col-xs-offset-4
      = link_to 'Lista', articles_path
