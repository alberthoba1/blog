= render 'shared/errors', obj: @article
.row
  .col-xs-12
    = form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f|
      .form-group
        .control-label.col-sm-2
          = f.label :Tytuł
        .col-sm-8
          = f.text_field :title,
            class: "form-control",         
            placeholder: "Tytuł artykułu",
            autofocus: true
      .form-group
        .control-label.col-sm-2
          = f.label :Treść
        .col-sm-8
          = f.text_area :description, rows: 9, class: "form-control", placeholder: "Wpisz treść artykułu"
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit class: 'btn btn-primary btn-lg'
    .col-xs-4.col-xs-offset-4
      = link_to 'Lista', articles_path
